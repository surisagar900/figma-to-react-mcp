{
  "name": "frontend-dev-mcp-server",
  "version": "1.0.0",
  "description": "A unified MCP server for frontend developers combining GitHub, Figma, and Playwright integrations",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "frontend-dev-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "cursor-mcp-config.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "postinstall": "npx playwright install chromium",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "mcp",
    "frontend",
    "github",
    "figma",
    "playwright",
    "development",
    "design-to-code"
  ],
  "author": "Frontend Dev MCP",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.2",
    "playwright": "^1.40.1",
    "sharp": "^0.33.1",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/jest": "^29.5.8",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sagarsuri/frontend-dev-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/sagarsuri/frontend-dev-mcp-server/issues"
  },
  "homepage": "https://github.com/sagarsuri/frontend-dev-mcp-server#readme"
}
